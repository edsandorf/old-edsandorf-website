---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "date"     : "{{ post.date | date_to_string }}",
      "image"    : "{{ site.baseurl }}/assets/img/{{ post.image }}"
      
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %},
  
  {% for news in site.news %}
    {
      "title"    : "{{ news.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ news.url }}",
      "category" : "{{ news.category }}",
      "tags"     : "{{ news.tags | join: ', ' }}",
      "date"     : "{{ news.date | date_to_string }}",
      "image"    : "{{ site.baseurl }}/assets/img/{{ news.image }}"
      
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %},
  
  {% for pubs in site.pubs %}
    {
      "title"    : "{{ pubs.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ pubs.url }}",
      "category" : "{{ pubs.category }}",
      "tags"     : "{{ pubs.tags | join: ', ' }}",
      "date"     : "{{ pubs.date | date_to_string }}",
      "image"    : "{{ site.baseurl }}/assets/img/{{ pubs.image }}"
      
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
]